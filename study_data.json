    "ai_settings": {
      "model": "openai/gpt-4o",
      "max_tokens": 1500,
      "temperature": 0.7,
      "scheduling_principles": [
        "Spaced repetition for better retention",
        "Harder topics when mental energy is highest",
        "Regular breaks and varied subjects",
        "Buffer time for review and catch-up",
